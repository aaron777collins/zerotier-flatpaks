{
    "app-id": "com.zerotier.gui",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "zerotier-gui",
    "modules": [
        {
            "name": "zerotier-gui",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir build",
                "cd build",
                "cmake .. -DCMAKE_INSTALL_PREFIX=/app",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://aur.archlinux.org/zerotier-gui-git.git",
                    "tag": "master"
                }
            ]
        }
    ]
}
